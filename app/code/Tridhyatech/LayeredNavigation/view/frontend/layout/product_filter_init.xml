<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Tridhyatech_LayeredNavigation::css/productfilter.css" />
        <css src="Tridhyatech_LayeredNavigation::css/nouislider.min.css" />
    </head>
    <body>
        <attribute name="class" value="plumrocket-product-filter"/>
        <referenceContainer name="after.body.start">
            <block name="product.filter.init" ifconfig="prproductfilter/general/enabled" template="Tridhyatech_LayeredNavigation::init.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Tridhyatech\LayeredNavigation\ViewModel\JsConfig</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
